<section class="bg-white shadow-md rounded-lg mb-12">
  <div class="grid md:grid-cols-2">
    <div class="p-8">
      <h1 class="text-4xl font-bold mb-4">Discover Endless Puzzle Adventures</h1>
      <p class="text-lg text-gray-700 mb-6">Subscribe today to unlock premium puzzles delivered to your door. Perfect for puzzle enthusiasts of all ages!</p>
      <div class="text-center mt-8">
        <%= link_to "Subscribe now", account_path, class: 'px-6 py-3 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600' %>
      </div>
    </div>
    <div class="py-8">
      <%= image_tag 'trials-of-camelot.jpg', alt: 'Trials of Camelot hero image', class: 'rounded-lg max-w-[600px] max-h-[400px] mx-auto' %>
    </div>
  </div>
</section>

<section class="mb-12">
  <div class="flex justify-between">
    <h2 class="text-2xl font-semibold text-center mb-6 flex-grow">Explore Our Popular Puzzles</h2>
    <%= link_to "All", puzzles_path, class: 'bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700 mb-6' %>
  </div>
  <div class="relative">
    <!-- Carousel Wrapper -->
    <div class="overflow-x-auto whitespace-nowrap space-x-4 flex justify-center">
      <% @puzzles.each_with_index do |puzzle, index| %>
        <%= render partial: "puzzles/puzzle", locals: { puzzle: puzzle, index: index, small: true } %>
      <% end %>
    </div>
  </div>
</section>
