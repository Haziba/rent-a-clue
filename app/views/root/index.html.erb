<section class="bg-white shadow-md rounded-lg mb-12">
  <div class="grid md:grid-cols-2">
    <div class="p-8">
      <h1 class="text-4xl font-bold mb-4">Discover Endless Puzzle Adventures</h1>
      <p class="text-lg text-gray-700 mb-6">Subscribe today to unlock premium puzzles delivered to your door. Perfect for puzzle enthusiasts of all ages!</p>
      <%= link_to "Subscribe now", new_subscription_path, class: 'px-6 py-3 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600' %>
    </div>
    <!-- Hero Image -->
    <div>
      <%= image_tag 'trials-of-camelot.jpg', alt: 'Trials of Camelot hero image', class: 'rounded-lg max-w-[600px] max-h-[400px] mx-auto' %>
    </div>
  </div>
</section>

<section class="mb-12">
  <h2 class="text-2xl font-semibold text-center mb-6">Explore Our Popular Puzzles</h2>
  <div class="relative">
    <!-- Carousel Wrapper -->
    <div class="overflow-x-auto whitespace-nowrap space-x-4 flex">
      <div class="inline-block w-[300px]">
        <%= image_tag 'davy-jones-locker.jpg', alt: 'Davy Jones Locker carousel image', class: 'rounded-lg max-w-[300px] max-h-[200px] mx-auto shadow-pd' %>
        <p class="text-center mt-2 font-medium">Davy Jones Locker</p>
      </div>
      <div class="inline-block w-[300px]">
        <%= image_tag 'money-box.jpg', alt: 'Money box carousel image', class: 'rounded-lg max-w-[300px] max-h-[200px] mx-auto shadow-pd' %>
        <p class="text-center mt-2 font-medium">Money Box</p>
      </div>
      <div class="inline-block w-[300px]">
        <%= image_tag 'philosophers-stone.jpg', alt: 'Philosophers Stone carousel image', class: 'rounded-lg max-w-[300px] max-h-[200px] mx-auto shadow-pd' %>
        <p class="text-center mt-2 font-medium">Philosopher's Stone</p>
      </div>
    </div>
  </div>
</section>
