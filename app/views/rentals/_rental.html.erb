<div class="flex items-center justify-between" id="<%= dom_id(rental) %>">
    <div>
        <p class="text-lg font-medium">Puzzle: <span class="text-blue-500"><%= rental.inventory.puzzle.name %></span></p>
        <p class="text-sm text-gray-600">Due Date: <span class="text-gray-800"><%= (rental.created_at + 1.month).to_date %></span></p>
    </div>

    <div class="px-4 py-2 <%= rental_status_classes(rental.status) %> font-semibold rounded-full">
        <%= rental.status.titleize %>
    </div>
</div>