<h2 class="text-2xl font-semibold mb-6 text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6 bg-white p-8 rounded-lg shadow-md max-w-md mx-auto" }) do |f| %>
  <div class="field">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field flex items-center">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
      <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "w-full px-6 py-3 text-white bg-blue-500 rounded-lg hover:bg-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
<% end %>

<div class="text-center mt-4 text-sm text-gray-600">
  <%= render "devise/shared/links" %>
</div>
