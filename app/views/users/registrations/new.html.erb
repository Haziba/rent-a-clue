<h2 class="text-2xl font-semibold mb-6 text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6 bg-white p-8 rounded-lg shadow-md max-w-md mx-auto" }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="field">
    <%= f.check_box :terms_of_service, {}, "1", "0" %>
    <%= f.label :terms_of_service do %>
      I agree to the <%= link_to 'Terms & Conditions', terms_and_conditions_path, { class: 'underline', target: '_blank' } %> and <%= link_to 'Privacy Policy', privacy_policy_path, { class: 'underline', target: '_blank' } %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "w-full px-6 py-3 text-white bg-blue-500 rounded-lg hover:bg-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
<% end %>

<div class="text-center mt-4 text-sm text-gray-600">
  <%= render "users/shared/links" %>
</div>
