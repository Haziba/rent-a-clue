<div class="min-h-screen bg-gray-50 flex items-center justify-center px-4">
  <div class="bg-white p-8 md:p-10 rounded-xl shadow-lg max-w-md w-full">
    <!-- Title -->
    <h1 class="text-3xl font-extrabold text-center mb-2">Rent A Clue!</h1>
    <h2 class="text-lg font-medium text-center text-gray-700 mb-6">Sign Up</h2>

    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), class: "space-y-4" do |f| %>
      <!-- Email -->
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, required: true,
          class: "mt-1 block w-full border rounded-md shadow-sm px-4 py-2
          #{resource.errors[:email].any? ? 'border-red-500 ring-1 ring-red-300' : 'border-gray-300 focus:ring-2 focus:ring-teal-400 focus:border-teal-400'}" %>
        <% if resource.errors[:email].any? %>
          <p class="text-sm text-red-600 mt-1">Email <%= resource.errors[:email].first %></p>
        <% end %>
      </div>

      <!-- Password -->
      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, required: true, autocomplete: "new-password",
          class: "mt-1 block w-full border rounded-md shadow-sm px-4 py-2
          #{resource.errors[:password].any? ? 'border-red-500 ring-1 ring-red-300' : 'border-gray-300 focus:ring-2 focus:ring-teal-400 focus:border-teal-400'}" %>
        <% if resource.errors[:password].any? %>
          <p class="text-sm text-red-600 mt-1">Password <%= resource.errors[:password].first %></p>
        <% end %>
      </div>

      <!-- Password Confirmation -->
      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password",
          class: "mt-1 block w-full border rounded-md shadow-sm px-4 py-2
          #{resource.errors[:password_confirmation].any? ? 'border-red-500 ring-1 ring-red-300' : 'border-gray-300 focus:ring-2 focus:ring-teal-400 focus:border-teal-400'}" %>
        <% if resource.errors[:password_confirmation].any? %>
          <p class="text-sm text-red-600 mt-1">Password Confirmation <%= resource.errors[:password_confirmation].first %></p>
        <% end %>
      </div>

      <!-- Checkbox -->
      <div class="flex items-start gap-2 text-sm text-gray-600">
        <%= f.check_box :terms_of_service,
          class: "mt-1 border-gray-300 text-teal-500 focus:ring-teal-400", required: true %>
        <label for="terms_of_service" class="leading-5">
          By continuing you are agreeing with our
          <%= link_to 'Terms & Conditions', terms_and_conditions_path, { class: 'underline', target: '_blank' } %> and
          <%= link_to 'Privacy Policy', privacy_policy_path, { class: 'underline', target: '_blank' } %>.
          Do you agree?
        </label>
      </div>

      <!-- Submit -->
      <div>
        <%= f.submit "Sign Up", class: "w-full bg-teal-400 hover:bg-teal-500 text-white font-semibold py-3 px-6 rounded-full transition" %>
      </div>
    <% end %>

    <!-- Already have an account -->
    <p class="text-center text-sm text-gray-700 mt-6">
      Do you have an account already?
      <%= link_to "Sign In", new_session_path(resource_name), class: "text-teal-600 font-medium hover:underline" %>
    </p>
  </div>
</div>
