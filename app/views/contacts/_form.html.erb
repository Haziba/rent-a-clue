<%= form_with(model: contact, url: contact_path, method: contact.new_record? ? :post : :patch, class: "space-y-6 bg-white p-8 rounded-lg shadow-md max-w-md mx-auto") do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="field">
    <%= form.label :phone, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :phone, class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="field">
    <%= form.label :address_1, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :address_1, class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="field">
    <%= form.label :address_2, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :address_2, class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="field">
    <%= form.label :city, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :city, class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="field">
    <%= form.label :postal_code, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :postal_code, class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="inline mt-4">
    <%= form.submit "Save Address", class: "w-full px-6 py-3 text-white bg-blue-500 rounded-lg hover:bg-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
<% end %>
