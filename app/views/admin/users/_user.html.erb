<tr id="<%= dom_id user %>">
  <td class="px-6 py-4"><%= link_to user.email, admin_user_path(user) %></td>
  <td class="px-6 py-4"><%= user.subscription ? user.subscription.created_at : '-' %></td>
  <td class="px-6 py-4 flex">
    <%= link_to 'Edit', edit_admin_user_path(user), class: 'bg-blue-600 text-white px-3 py-1 rounded hover:underline hover:bg-blue-700' %>
    <%= button_to 'Delete', admin_user_path(user), class: 'ml-4 bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700', method: :delete %>
  </td>
</tr>

