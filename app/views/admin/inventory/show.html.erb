<% provide(:title, "Inventory - #{@inventory.puzzle.name}") %>

<p style="color: green"><%= notice %></p>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
  <section class="bg-white shadow rounded-lg p-6 relative">
    <div class="flex justify-content mb-4">
      <h2 class="text-lg font-bold flex-grow">Inventory - <%= @inventory.puzzle.name %></h2>
      <%= link_to "Edit", edit_admin_inventory_path(@inventory), class: "rounded px-3 py-1 bg-blue-600 hover:bg-blue-900 text-white" %>
    </div>
    <div class="space-y-2">
      <p><span class="font-semibold">Condition:</span> <%= @inventory.condition %></p>
      <p><span class="font-semibold">Price bought for:</span> <%= @inventory.price_bought_for %></p>
      <p><span class="font-semibold">Details:</span> <%= @inventory.details %></p>
      <p><span class="font-semibold">Total Rentals:</span> <%= @inventory.puzzle.rental_count %></p>
    </div>
  </section>

  <section class="bg-white shadow rounded-lg p-6 md:col-span-2">
    <h2 class="text-lg font-bold mb-4">Rentals</h2>
    <table class="min-w-full divide-y divide-gray-200 text-sm">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-2 text-left font-medium text-gray-500">Puzzle type</th>
          <th class="px-4 py-2 text-left font-medium text-gray-500">Created at</th>
          <th class="px-4 py-2 text-left font-medium text-gray-500">Status</th>
          <th class="px-4 py-2 text-left font-medium text-gray-500">Last status update at</th>
          <th class="px-4 py-2 text-left font-medium text-gray-500">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <%= render @inventory.rentals %>
      </tbody>
    </table>
  </section>
</div>
