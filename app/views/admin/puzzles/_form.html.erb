<%= form_with(model: puzzle) do |form| %>
  <% if puzzle.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(puzzle.errors.count, "error") %> prohibited this puzzle from being saved:</h2>

      <ul>
        <% puzzle.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :price_bought_for, style: "display: block" %>
    <%= form.text_field :price_bought_for %>
  </div>

  <div>
    <%= form.label :condition, style: "display: block" %>
    <%= form.text_field :condition %>
  </div>

  <div>
    <%= form.label :details, style: "display: block" %>
    <%= form.text_field :details %>
  </div>

  <div>
    <%= form.label :puzzle_type_id, style: "display: block" %>
    <%= form.select :puzzle_type_id, @puzzle_types.map { |pt| [pt.name, pt.id] } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
