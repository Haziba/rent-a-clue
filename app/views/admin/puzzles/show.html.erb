<% provide(:title, "Puzzle - #{@puzzle.name}") %>

<p style="color: green"><%= notice %></p>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <section class="bg-white shadow rounded-lg p-6">
    <h2 class="text-lg font-bold mb-4">Puzzle</h2>
    <div class="space-y-2">
      <p><span class="font-semibold">Name:</span> <%= @puzzle.name %></p>
      <p><span class="font-semibold">Brand:</span> <%= @puzzle.brand %></p>
      <p><span class="font-semibold">Description:</span> <%= @puzzle.description %></p>
      <p><span class="font-semibold">Total Rentals:</span> <%= @puzzle.rental_count %></p>
    </div>
  </section>

  <section class="bg-white shadow rounded-lg p-6 md:col-span-2">
    <div class="flex justify-between">
      <h2 class="text-lg font-bold mb-4">Inventory</h2>
      <%= link_to 'Add', new_admin_puzzle_inventory_path(@puzzle), class: 'rounded px-3 py-1 bg-blue-600 hover:be-blue-900 text-white' %>
    </div>
    <table class="min-w-full divide-y divide-gray-200 text-sm">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-2 text-left font-medium text-gray-500">Puzzle ID</th>
          <th class="px-4 py-2 text-left font-medium text-gray-500">Condition</th>
          <th class="px-4 py-2 text-left font-medium text-gray-500">Status</th>
          <th class="px-4 py-2 text-left font-medium text-gray-500">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <%= render @inventory %>
      </tbody>
    </table>
  </section>
</div>
