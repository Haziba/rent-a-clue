<tr id="<%= dom_id puzzle_type %>">
  <td class="px-6 py-4">
  <%= link_to puzzle_type.name, admin_puzzle_type_path(puzzle_type) %>
  </td>
  <td class="px-6 py-4"><%= puzzle_type.brand %></td>
  <td class="px-6 py-4"><%= puzzle_type.available_inventory.count %>/<%= puzzle_type.inventory.count %></td>
  <td class="px-6 py-4 flex">
    <%= link_to 'Edit', edit_admin_puzzle_type_path(puzzle_type), class: 'bg-blue-600 text-white px-3 py-1 rounded hover:underline hover:bg-blue-700' %>
    <%= button_to 'Delete', admin_puzzle_type_path(puzzle_type), class: 'ml-4 bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700', method: :delete %>
  </td>
</tr>
